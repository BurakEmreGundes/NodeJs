#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/coffee" ]; then
  "$basedir/coffee"  "$basedir/../chuck/bin/chuck" "$@"
  ret=$?
else 
  coffee  "$basedir/../chuck/bin/chuck" "$@"
  ret=$?
fi
exit $ret
